CREATE TABLE ledger (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    date TEXT NOT NULL,
    description TEXT NOT NULL,
    amount REAL NOT NULL,
    type TEXT CHECK(type IN ('revenue', 'owner_salary', 'tool_upgrade')),
    balance REAL NOT NULL
);

